{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/components/*": ["./components/*"],
      "@/screens/*": ["./screens/*"],
      "@/services/*": ["./services/*"],
      "@/store/*": ["./store/*"],
      "@/types": ["./types/index.ts"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./lib/utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
